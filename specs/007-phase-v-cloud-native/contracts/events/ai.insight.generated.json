{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-wealth-companion.com/events/ai.insight.generated.json",
  "title": "AIInsightGeneratedEvent",
  "description": "Event published when AI generates a financial insight for a user",
  "type": "object",
  "required": ["specversion", "id", "type", "source", "time", "datacontenttype", "data"],
  "properties": {
    "specversion": {
      "type": "string",
      "const": "1.0"
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "type": {
      "type": "string",
      "const": "ai.insight.generated"
    },
    "source": {
      "type": "string"
    },
    "time": {
      "type": "string",
      "format": "date-time"
    },
    "datacontenttype": {
      "type": "string",
      "const": "application/json"
    },
    "correlationid": {
      "type": "string",
      "format": "uuid"
    },
    "data": {
      "type": "object",
      "required": ["insightId", "userId", "insightType", "title", "message", "confidence"],
      "properties": {
        "insightId": {
          "type": "string",
          "format": "uuid"
        },
        "userId": {
          "type": "string",
          "format": "uuid"
        },
        "insightType": {
          "type": "string",
          "enum": ["spending_pattern", "budget_warning", "savings_tip", "investment_suggestion"]
        },
        "title": {
          "type": "string",
          "maxLength": 100
        },
        "message": {
          "type": "string",
          "maxLength": 500
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "relatedEntities": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        "expiresAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
