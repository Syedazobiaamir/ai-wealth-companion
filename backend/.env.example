# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
AUTH_RATE_LIMIT=5/minute
WRITE_RATE_LIMIT=30/minute
READ_RATE_LIMIT=100/minute
AI_RATE_LIMIT=10/minute

# AI Provider Configuration
# Priority: GEMINI_API_KEY > OPENAI_API_KEY > Fallback (no AI provider)
# Only ONE key is required. Gemini is checked first.

# Google Gemini API (Recommended - free tier available)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API (Alternative)
# Get your key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Application Settings
DEBUG=true
APP_NAME=AI Wealth Companion API
APP_VERSION=2.0.0
